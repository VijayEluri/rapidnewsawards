<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.record {
			border-top: 1px solid #DCDCDC;
			height: 50px;
		}
		
		.name {
			font-weight: bold;
			font-size: 1em;
			color: #2276BB;
		}
		
		.link {
			font-weight: bold;
			color: #2276BB;
			font-size: 1em;
		}
		
	</ui:style>

	<div class='{style.record}'>
	<p>
			<span class='{style.name}' ui:field="subject" />
			<span ui:field="verb" />
			<span class='{style.link}' ui:field="object" />
</p>
	</div>

</ui:UiBinder> 