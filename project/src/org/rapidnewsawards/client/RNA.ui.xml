<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:rna='urn:import:org.rapidnewsawards.client'>

	<ui:style type='org.rapidnewsawards.client.RNA.Style'>
		.navigationFrame {
			margin-left: 250px;
			margin-bottom: auto;
			width: 140px;
		}
		
		.outerframe {
			width: 700px;
		}
		
		.top {
			padding: 10px;
			width: 100%;
			background-color: #FFFF5E;
		}
		
		.topLeft {
			padding: 10px;
			width: 100%;
			background-color: #cccccc;
		}
		
		.empty {
			font-weight: bold;
			text-align: left;
			color: #2276BB;
			height: 3.3em;
		}
		
		.title {
			text-align: center;
			font-size: 1.8em;
			height: 1.8em;
		}
		
		.previous {
			font-weight: bold;
			height: 1.8em;
			text-align: left;
			color: #2276BB;
		}
		
		.ticker {
			font-weight: bold;
			font-style: italic;
			text-align: right;
			padding-right: 5px;
		}
		
		.tools {
			background-color: white;
			margin-left: 0;
		}
		
		.status {
			height: 20px;
			padding: 10px;
			text-align: left;
		}
		
		.navigationBottom {
			height: 580px;
			width: 100%;
			background-color: #cccccc;
		}
		
		.navButton {
			background-color: white;
		}
		
		.sideButton {
			background-color: #cccccc;
			padding: 0px 0px;
			border: none;
			height: 20px;
			color: #2276BB;
			width: 100%;
			text-align: left;
		}
		
		.sideButton:HOVER {
			background-color: #B0CECC;
		}
		
		.sideButtonSelected {
			background-color: #B0CECC;
			padding: 0px 0px;
			border: none;
			height: 20px;
			color: #2276BB;
			width: 100%;
			text-align: left;
		}
		
		.eventPanel {
			width: 100%
		}
	</ui:style>

	<g:HorizontalPanel>
		<g:VerticalPanel styleName='{style.navigationFrame}'>
			<g:HorizontalPanel styleName='{style.topLeft}'>
				<g:Label styleName='{style.empty}'>
					Sign In
				</g:Label>
			</g:HorizontalPanel>


			<g:DialogBox autoHide="true" modal="true" ui:field='messageBox'>
				<g:caption>
					<b>Illegal Command</b>
				</g:caption>
					<g:Button width='100%' ui:field='okButton'>Okay</g:Button>
			</g:DialogBox>


			<g:VerticalPanel styleName='{style.navigationBottom}'>
			
				<g:cell height="20px" horizontalAlignment='ALIGN_LEFT'
					verticalAlignment='ALIGN_MIDDLE'>
					<g:Button styleName='{style.sideButtonSelected}' ui:field='showCurrentEdition'>
						Current Edition
           			</g:Button>
				</g:cell>

				<g:cell height="20px" horizontalAlignment='ALIGN_LEFT'
					verticalAlignment='ALIGN_MIDDLE'>
					<g:Button styleName='{style.sideButton}' ui:field='showStories'>
						Votes
           			</g:Button>
				</g:cell>

				<g:cell height="20px" horizontalAlignment='ALIGN_LEFT'
					verticalAlignment='ALIGN_MIDDLE'>
					<g:Button styleName='{style.sideButton}' ui:field='showSocial'>
						Social
					</g:Button>
				</g:cell>
				
				<g:cell height="100%" verticalAlignment='ALIGN_MIDDLE'>
					<g:Button styleName='{style.sideButton}'>
					</g:Button>
				</g:cell>

			</g:VerticalPanel>

		</g:VerticalPanel>

		<g:VerticalPanel styleName='{style.outerframe}'>

			<g:HorizontalPanel styleName='{style.top}'>
				<rna:NavBox ui:field="leftBox"></rna:NavBox>
				<g:Label styleName='{style.title}' ui:field="title">Journalism</g:Label>
				<rna:NavBox ui:field="rightBox"></rna:NavBox>
			</g:HorizontalPanel>

			<g:HorizontalPanel>
				<g:cell width="520px" verticalAlignment='ALIGN_MIDDLE'>
					<g:Label styleName='{style.status}' ui:field='status'></g:Label>
				</g:cell>
			</g:HorizontalPanel>

			<g:SimplePanel styleName='{style.eventPanel}' ui:field='mainPanel'/>

		</g:VerticalPanel>
	</g:HorizontalPanel>

</ui:UiBinder>