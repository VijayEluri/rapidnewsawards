<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:rna='urn:import:rapidnews.client'>

	<ui:style>
		.outerframe {
			margin-left: 200px;
			width: 950px;
		}
		
		.top {
			padding: 10px;
			height: 30px;
			width: 100%;
			background-color: #FFFF5E;
		}
		
		.title {
			text-align: center;
			font-size: large;
		}
		
		.previous {
			font-weight: bold;
			text-align: left;
			color: #2276BB;
		}
		
		.ticker {
			font-weight: bold;
			font-style: italic;
			text-align: right;
		}
		
		.tools {
			background-color: white;
			margin-left: 0;
		}
		
		.status {
			height: 20px;
			padding: 10px;
			text-align: center;
		}
		
		.votes {
			width: 100%
		}
	</ui:style>

	<g:VerticalPanel styleName='{style.outerframe}'>

		<g:HorizontalPanel styleName='{style.top}'>
			<g:Label styleName='{style.previous}'> Previous Edition </g:Label>
			<g:Label styleName='{style.title}'>Rapid News Awards #1 </g:Label>
			<g:Label styleName='{style.ticker}'> 5h 32m Remaining </g:Label>
		</g:HorizontalPanel>

		<g:Button styleName='{style.tools}' ui:field='refresh'>
			Refresh
		</g:Button>

		<g:Label styleName='{style.status}' ui:field='status'></g:Label>

		<rna:Votes styleName='{style.votes}' ui:field='votes'></rna:Votes>

	</g:VerticalPanel>

</ui:UiBinder>