<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:rna='urn:import:rapidnews.client'>

	<ui:style>

		.outerframe {
			border: 1px solid black;
			margin-left: 200px;
		}
			
		.top {
			padding: 10px;
			text-align: center;
			font-size: large;
			height: 30px;
			background-color: #FFFF5E;
		}
		
		.tools {
			margin-left: 46%;
			}
		
		.status {
			height: 20px;
			padding: 10px;
			text-align: center;
		}
		
		.votes {
			border-left: 0px;
			width: 950px;
		}
		
	</ui:style>

	<g:VerticalPanel styleName='{style.outerframe}'>

		<g:Label styleName='{style.top}'>Rapid News Awards</g:Label>

		<g:Button styleName='{style.tools}' ui:field='refresh'>
			Refresh
		</g:Button>

		<g:Label styleName='{style.status}' ui:field='status'></g:Label>
			<rna:Votes styleName='{style.votes}' ui:field='votes'>
			</rna:Votes>
	</g:VerticalPanel>

</ui:UiBinder>